generator client {
  provider = "prisma-client-js"
  output   = "build"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id               Int        @id @default(autoincrement())
  email            String     @unique
  name             String?
  bio              String?
  password         String?
  photo            String?
  banner           String?
  googleId         String?    @unique
  googleUrl        String?
  githubId         String?    @unique
  githubUrl        String?
  requireEmailCode Boolean    @default(false)
  emailCode        String?
  targetEmail      String?
  targetCode       String?
  active           Boolean    @default(true)
  dateCreated      DateTime   @default(now())
  dateUpdated      DateTime   @updatedAt

  @@index([dateCreated])
  @@index([dateUpdated])
}